<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>		
	</ui:style>
	<g:HTMLPanel>
		<article id="front">
			<div class="content">
				<div>
					Share this poll :
					<a ui:field="link"></a>
				</div>
				<h1>Test</h1>
				<p>test</p>
				<form>
					<div class="field">
						<table>
							<tbody>
								<tr>
									<td class="hint">Move the slider according to your position for
										each available choice</td>
									<td ui:field="alternatives" class="input">

									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="field">
						<table>
							<tbody>
								<tr>
									<td class="hint">Type your name to be able to submit your vote</td>
									<td class="input">

										<input id="name" type="text" name="user" value="" class="required"
											placeholder="Your name" />
									</td>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="submit">
						<input type="submit"  id="submit" value="Vote!" />
						or
						<a ui:field="linkresult">See the current result</a>
					</div>


				</form>


				<script type="text/javascript">
					$('form').on('change', '.alternative > input[type=range]', function () {
					$(this).prev('.name').css('font-weight', (1 + this.value * (9 - 1)
					/ 100) * 100);
					});
				</script>
			</div>

		</article>

	</g:HTMLPanel>
</ui:UiBinder> 